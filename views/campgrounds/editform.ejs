<%- include("../partials/header") %>

    <h3 class="text-center">Edit <%= campground.name %></h3>
    <div class="row">
        <div style="width: 30%; margin: 25px auto">
            <form action="/camps/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[img]" value="<%= campground.img %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit</button>
                </div>
                <a href="/camps/<%= campground._id %> ">Go back</a>
            </form>
        </div>
    </div>

<%- include("../partials/footer") %>