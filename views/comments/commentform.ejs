<%- include("../partials/header") %>

<h3 class="text-center">New Comment on <%=campground.name%> </h3>
<div class="row">
    <div style="width: 30%; margin: 25px auto">
        <form action="/camps/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="comment">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">submit</button>
            </div>
            <a href="/camps">Go back</a>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>