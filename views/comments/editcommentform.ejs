<%- include("../partials/header") %>

<h3 class="text-center">Edit Comment </h3>
<div class="row">
    <div style="width: 30%; margin: 25px auto">
        <form action="/camps/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">submit</button>
            </div>
            <a href="/camps">Go back</a>
        </form>
    </div>
</div>

